<?xml version="1.0" encoding="utf-8"?>
<com.example.boylucky.myquarter.view.widget.SlidingMenu xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="fill_parent"
    android:id="@+id/zid"
    android:scrollbars="none"
    tools:context="com.example.boylucky.myquarter.view.activity.MainActivity">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:orientation="horizontal" >

        <include layout="@layout/layout_menu" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/rl"
                android:layout_width="match_parent"
                android:background="#03A9f4"
                android:gravity="center_vertical"
                android:layout_height="150px">
                <ImageView
                    android:id="@+id/pic"
                    android:layout_width="120px"
                    android:layout_height="120px"
                    android:layout_marginLeft="20px"
                    android:layout_marginTop="10px"
                    android:src="@mipmap/pic"
                    />
                <TextView
                    android:id="@+id/text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="推荐"
                    android:layout_centerHorizontal="true"
                    android:textSize="60px"
                    android:layout_marginTop="20px"
                    android:textColor="#fff"
                    />
                <ImageView
                    android:id="@+id/bianji"
                    android:layout_width="120px"
                    android:layout_height="120px"
                    android:layout_marginLeft="50px"
                    android:layout_marginTop="10px"
                    android:layout_alignParentRight="true"
                    android:src="@mipmap/bianji"
                    />

            </RelativeLayout>
            <com.hjm.bottomtabbar.BottomTabBar
                android:id="@+id/tab_but"
                android:layout_below="@+id/rl"
                android:layout_width="match_parent"
                android:layout_height="match_parent"></com.hjm.bottomtabbar.BottomTabBar>
        </RelativeLayout>
    </LinearLayout>










</com.example.boylucky.myquarter.view.widget.SlidingMenu>
